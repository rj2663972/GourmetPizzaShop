@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/bbq_beef_pizza.jpeg" alt="BBQ Beef" class="img-responsive" style="width:100%"/>
            <div class="carousel-caption" role="option">
                <p>
                    BBQ Beef
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/bbq_chicken_and_pineapple_pizza.jpg" alt="Chicken and Pineapple" class="img-responsive" style="width:100%"/>
            <div class="carousel-caption" role="option">
                <p>
                    Chicken and Pineapple
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/bbq_pepperoni_pizza.jpg" alt="Pepperoni Feast" class="img-responsive" style="width:100%"/>
            <div class="carousel-caption" role="option">
                <p>
                    Pepperoni Feast
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/bbq_veggie_pizza.jpg" alt="Vegetarian" class="img-responsive" style="width:100%"/>
            <div class="carousel-caption" role="option">
                Vegetarian
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <h3>Welcome to Gourmet Pizza shop</h3>
    </div>
    <div class="col-md-4">
        <ul class="navbar-link">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-area="" asp-controller="Pizzas" asp-action="Index">Pizza Index</a></li>
            <li><a asp-area="" asp-controller="Customers" asp-action="Index">Customer Index</a></li>
        </ul>
    </div>
</div>
